<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgother"
    android:scaleType="centerInside">

    <TextView
        android:id="@+id/timeView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:background="@drawable/whit_circle"
        android:textColor="@android:color/black"
        android:text="秒數"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:textColor="@android:color/holo_red_light"
        android:text="分數"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toEndOf="@id/timeView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questView"
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="題目內容"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="40dp"
        android:gravity="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeView" />


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="750dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeView">


        <Button
            android:id="@+id/buttonA"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="optionA"
            android:background="@drawable/option_circle"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonB"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="optionB"
            android:background="@drawable/option_circle"
            android:textSize="40dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="750dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1">


        <Button
            android:id="@+id/buttonC"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="optionC"
            android:background="@drawable/option_circle"
            android:textSize="40dp" />

        <Button
            android:id="@+id/buttonD"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="optionD"
            android:background="@drawable/option_circle"
            android:textSize="40dp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>